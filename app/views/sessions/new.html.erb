<h4 class='d-flex justify-content-between mb-4'>
<span>Login </span> 
</h4>
<%= form_tag sessions_path do |form| %>
 <div class='field'>
   <%= label_tag :email %>
   <%= text_field_tag :email %>
 </div>
 <div class='field'>
   <%= label_tag :password %>
   <%= password_field_tag :password %>
 </div>
 <div class='actions' style='margin-top: 20px'>
   <%= submit_tag 'Login'%>
 </div>
<% end %>

<style>
  .field{
    margin-top: 30px  
      }
</style>
